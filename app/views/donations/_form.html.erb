<%= simple_form_for @donation do |d| %>
  <%= d.input :amount_bracket,
        label: "Combien avez-vous donné en 2017 à des associations ?",
        collection: Donation.amount_brackets, as: :radio_buttons,
        wrapper_html: { class: 'q' },
        wrapper: :vertical_radio_and_checkboxes %>
  <%= d.button :submit %>
<% end %>
